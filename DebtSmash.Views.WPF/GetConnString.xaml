<Window x:Class="DebtSmash.Views.WPF.GetConnString"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetConnString" MinHeight="150" MaxHeight="150" WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"  Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center">Enter a connection string</TextBlock>
        <TextBox Name="ConnectionString" Grid.Row="1" VerticalAlignment="Center" Margin="3,0,3,0"/>
        <ComboBox ItemsSource="{Binding others}" SelectionChanged="cothers_SelectionChanged" Name="cothers" IsEditable="False"/>
        <Button Click="Button_Click" Grid.Row="3" HorizontalAlignment="Center" Padding="10,4,10,4" Margin="0,5,0,5">OK</Button>
    </Grid>
</Window>
